@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Home</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Address.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.OneTimePickup)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.Address.StreetAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.OneTimePickup)
            </td>
            <td>
                <a asp-action="ConfirmPickUp" asp-route-id="@item.Id">Confirm Pick Up</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    Select A Day Below to See Customers On Route For That Day
</p>
<div>
    <a asp-action="SelectDayToView" asp-route-id="Monday">Monday</a>|
    <a asp-action="SelectDayToView" asp-route-id="Tuesday">Tuesday</a>|
    <a asp-action="SelectDayToView" asp-route-id="Wednesday">Wednesday</a>|
    <a asp-action="SelectDayToView" asp-route-id="Thursday">Thursday</a>|
    <a asp-action="SelectDayToView" asp-route-id="Friday">Friday</a>
</div>
