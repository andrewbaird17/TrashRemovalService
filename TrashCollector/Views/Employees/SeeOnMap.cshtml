@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "SeeOnMap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Location on Map</h1>

<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Address.StreetAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Address.StreetAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Address.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Address.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Account.Address.ZipCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Account.Address.ZipCode)
            </dd>
        </dl>
    </div>
    <div class="col-md-8">
        <div id="map" style="height:500px; width:500px"></div>
        <script>
            var geocoder;
            //var map;
            function initMap() {
                var location = { lat: 43.041, lng: -87.906 };
                var map = new google.maps.Map(document.getElementById('map'), {
                    center: location,
                    zoom: 15
                });
                var marker = new google.maps.Marker({position: location, map: map})
            }
                
        </script>
        @*<script src="https://maps.googleapis.com/maps/api/js?key=&callback=initMap"*@
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDBVhKnqThTyhe8_HxLPNRQPDnfEKTmzwQ&callback=initMap"
                async defer></script>
    </div>
</div>