@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "SelectDayToView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Selected Day To View</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Address.StreetAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.PickUpDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Address.StreetAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.PickUpDay)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
<a asp-action="Index">Back To Today's Pick Ups</a>
</div>
