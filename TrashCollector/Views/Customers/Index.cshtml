@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Home</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.PickUpDay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.FirstName)
            </td>
            <td>
                @Html.DisplayFor(model => model.Account.PickUpDay)
            </td>

            <td>
                <a asp-action="EditPickUpDay" asp-route-id="@Model.Id">Edit Pick Up Day</a> |
                <a asp-action="Details" asp-route-id="@Model.Id">Account Details (Current Bill)</a> |
                <a asp-action="EditOneTimePickup" asp-route-id="@Model.Id">Schedule One Time Pick Up</a> |
                <a asp-action="EditServiceSuspension" asp-route-id="@Model.Id">Schedule Service Suspension</a> |
                <a asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            </td>
        </tr>

    </tbody>
</table>
